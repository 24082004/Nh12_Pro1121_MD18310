<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentTaoTaiKhoan">
    <LinearLayout
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="48dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo1"/>
        <EditText
            android:id="@+id/edt_ttkHt"
            android:layout_marginTop="60dp"
            android:padding="12dp"
            android:hint="Tên đăng nhập"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/edt_ttkTenDn"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:hint="Họ và tên"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edt_ttkMk"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:hint="Mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_ttk"
                android:textStyle="bold"
                android:layout_marginRight="3dp"
                android:layout_width="0dp"
                android:backgroundTint="#00B9D8"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xác nhận"/>
            <Button
                android:id="@+id/btn_ttkCancel"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="3dp"
                android:backgroundTint="#474747"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>