<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_suaNv"
        android:layout_marginTop="25dp"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa nhân viên"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingVertical="3dp"/>
    <EditText
        android:id="@+id/edt_suamaNv"
        android:layout_marginHorizontal="12dp"
        android:clickable="false"
        android:focusable="false"
        android:textIsSelectable="false"
        android:contextClickable="false"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:hint="Mã nhân viên: "
        android:background="@drawable/backgraoundtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_suahtNv"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:hint="Họ tên nhân vien:"
        android:background="@drawable/backgraoundtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_suansNv"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:hint="Năm sinh:"
        android:background="@drawable/backgraoundtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_suasdtNv"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:hint="Số điện thoại:"
        android:background="@drawable/backgraoundtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_suaemailNv"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:hint="Email:"
        android:background="@drawable/backgraoundtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_suasaveNv"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00B9D8"
            android:text="Lưu"/>
        <Button
            android:id="@+id/btn_suacanelNv"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#474747"
            android:layout_weight="1"
            android:text="Hủy"/>
    </LinearLayout>
</LinearLayout>